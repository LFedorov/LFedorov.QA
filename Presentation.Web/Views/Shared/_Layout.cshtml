<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="@Url.Content("~/Content/ico/favicon.ico")" type="image/x-icon">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/main.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <form action="~/Home/Search" method="POST" class="form-search" role="form">
                    <div class="col-md-11 col-sm-10 col-xs-8">
                        <div class="form-group input-group">
                            <input type="text" name="searchQuery" class="form-control" placeholder="Что ищем?" value="@ViewBag.SearchQuery">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">Поиск</button>
                            </span>
                        </div>
                    </div>
                </form>
                <div class="col-md-1 col-sm-2 col-xs-4">
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-hand-down"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="~/">На главную</a></li>
                            <li><a href="#" data-toggle="modal" data-target="#uploadModal">Загрузить</a></li>
                            <li class="divider"></li>
                            <li><a href="~/Home/Logout">Выход</a></li>
                        </ul>
                    </div>

                    @*<button data-toggle="modal" data-target="#uploadModal" class="btn btn-default pull-right">Загрузить</button>*@
                </div>
            </div>
        </div>
    </div>
    <div class="container content-main">
        @RenderBody()
    </div>
    <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="~/Home/Upload" method="POST" role="form" enctype="multipart/form-data">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title" id="uploadModalLabel">Загрузка тестов</h4>
                    </div>
                    <div class="modal-body">
                        <input type="file" name="postedFiles" multiple required/>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Загрузить</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Отмена</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
